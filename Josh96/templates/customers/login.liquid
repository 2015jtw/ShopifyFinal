<!-- /templates/customers/login.liquid -->

<div class="container py-5 my-5">
    <div class="login-form">
        {% form 'customer_login' %}
            {% include 'form-error', form: form %}
            <h2>Login</h2>

            <label for="emailAddress">Email Address</label>
            <input type="email" name="customer[email]" class="form-control my-2"/>

            <label for="password">Password</label>
            <input type="password" name="customer[password]" class="form-control my-2"/>

            <input class="btn btn-primary btn-lg my-1" type="submit" value="Log In"/>

        {% endform %}

        <a id="forgotPassword" href="#recover" class="text-center">Forgot your Password</a>
    </div>

    <div id="forgot_password_form" class="d-none forgot-password-form">
        {% form 'recover_customer_password' %}
            {% include 'form-error', form: form %}

            <div class="col-12 mt-3">
                <label class="form-label" for="resetPassword">Email Address</label>
                <input class="form-control" type="email" name="email" id="resetPassword">
            </div>

            <input type="submit" value="Reset Password" class="btn btn-secondary my-2">


        {% endform %}
    </div>
</div>

