<!-- /templates/customers/activate_account.liquid -->
<div class="container my-5">
  <div class="text-center">
    <h1 class="lead">Activate Account</h1>
  </div>
  <div class="row">
    {% form 'activate_customer_password' %}
      {% include 'form-error', form: form %}

      <div class="col-12">
        <label for="activate_password_1" class="form-label">Password</label>
        <input class="form-control" type="password" name="customer[password]" id="activate_password_1">
      </div>

      <div class="col-12">
        <label for="activate_password_2" class="form-label">Password Confirmation</label>
        <input class="form-control" type="password" name="customer[password_confirmation]" id="activate_password_2">
      </div>

      <div class="col-12 my-3">
        <button class="btn btn-primary w-100 rounded-0" type="submit">Activate Account</button>
      </div>

      <p class="text-center">or</p>

      <div class="col-12">
        <input class="btn btn-primary w-100 rounded-0" type="submit" name="decline" value="Decline Invitation"></input>
      </div>

    {% endform %}
  </div>
</div>